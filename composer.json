{
    "name": "daikon/flysystem-adapter",
    "type": "library",
    "description": "Flysystem adapter for Daikon projects.",
    "keywords": [ "flysystem", "adapter" ],
    "homepage": "https://github.com/daikon-cqrs/flysystem-adapter",
    "license": "MPL-2.0",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "php": "^7.2",
        "daikon/dbal": "master@dev",
        "league/flysystem": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "sebastian/phpcpd": "^4.1",
        "squizlabs/php_codesniffer": "^3.3",
        "vimeo/psalm": "^2.0"
    },
    "autoload": {
        "psr-4": { "Daikon\\Flysystem\\" : "src" }
    },
    "autoload-dev": {
        "psr-4": { "Daikon\\Tests\\Flysystem\\": "tests" }
    },
    "scripts": {
        "build": [ "@sniff", "@tests" ],
        "code-sniffer": "phpcs -p -s --extensions=php --standard='PSR1,PSR2' src/",
        "code-sniffer-autofix": "phpcbf --standard=PSR2 -d tabWidth=4 src/",
        "copy-paste-detector": "phpcpd src/ || true",
        "sniff": [
            "@code-sniffer",
            "@copy-paste-detector",
            "@validate-json",
            "psalm"
        ],
        "test": "phpunit --no-coverage",
        "tests": "phpunit",
        "validate-deps": "composer validate --with-dependencies --strict",
        "validate-json": "composer validate --no-check-all --no-check-lock"
    }
}
